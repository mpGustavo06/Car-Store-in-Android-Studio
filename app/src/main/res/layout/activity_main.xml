<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Cadastros"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <!-- Linha Divisória -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="20dp"
        />

    <!-- Botôes de navegação -->
    <Button
        android:id="@+id/buttonCadAnuncios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Anuncios"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/buttonCadModelos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Modelos"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/buttonCadMarcas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Marcas"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/buttonCadCidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Cidades"
        android:textSize="16sp"
        />
</LinearLayout>